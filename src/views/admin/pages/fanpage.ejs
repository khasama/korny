<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- slide trái -->
        <%- include('../partials/left') %>
            <!-- End slide trái -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Top bar -->
                    <%- include('../partials/top') %>
                        <!-- End of Top bar -->

                        <!-- Begin Page Content -->
                        <div class="container-fluid" style="margin-top: 20px;">

                            <!-- DataTales Example -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary" style="display: inline;">Fanpages
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>Fanpage ID</th>
                                                    <th>Name</th>
                                                    <th>Images number</th>
                                                    <th style="width: 25%;">
                                                        <a href="javascript:void(0)" data-toggle="modal"
                                                            data-target="#newFanpageModal">
                                                            New
                                                        </a>
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% fanpages.forEach(fanpage=> { %>
                                                    <tr>
                                                        <td>
                                                            <%- fanpage.fanpageId; %>
                                                        </td>
                                                        <td>
                                                            <%- fanpage.name %>
                                                        </td>
                                                        <td>
                                                            <%- fanpage.numberImages %>
                                                        </td>
                                                        <td>
                                                            <a href="javascript:void(0)" class="btn btn-primary"
                                                                data-id="<%- fanpage._id %>"
                                                                onclick="getInformationFanpage(this)">Edit</a>
                                                            <a href="/admin/fanpage/<%- fanpage._id %>"
                                                                class="btn btn-warning">Images</a>
                                                            <a href="javascript:void(0)" class="btn btn-danger"
                                                                data-id="<%- fanpage._id %>"
                                                                onclick="deleteFanpage(this)">Delete</a>
                                                        </td>
                                                    </tr>
                                                    <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <div class="modal fade" id="newFanpageModal" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog" style="max-width: 50%;">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">NEW FANPAGE</h5>
                                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">×</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div>
                                                <div class="form-group">
                                                    <label for="id">id:</label>
                                                    <input type="text" class="form-control" id="addFanpageId"
                                                        autocomplete="off">
                                                </div>
                                                <div class="form-group">
                                                    <label for="name">Name:</label>
                                                    <input type="text" class="form-control" id="addFanpageName"
                                                        autocomplete="off">
                                                </div>
                                                <button id="newFanpage" class="btn btn-primary">Add</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- -->

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <%- include('../partials/footer') %>
                    <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->
            <div id="alert-area" class="position-absolute" style="top: 20px; right: 20px;"></div>
    </div>
    <!-- End of Page Wrapper -->

    <%- include('../partials/bot') %>

</body>

</html>