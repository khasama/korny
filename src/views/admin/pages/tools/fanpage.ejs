<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head') %>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- slide trÃ¡i -->
        <%- include('../../partials/left') %>
            <!-- End slide trÃ¡i -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Top bar -->
                    <%- include('../../partials/top') %>
                        <!-- End of Top bar -->

                        <!-- Begin Page Content -->
                        <div class="container-fluid" style="margin: 20px 0;">
                            <h1 class="text-center">Get images of fanpage</h1>
                            <div class="form-inline my-3">
                                <div class="form-group">
                                    <label for="fanpage">Fanpage: </label>
                                    <select id="idFanpage" class="form-control ml-2">
                                        <% fanpages.forEach(fanpage=> { %>
                                            <option value="<%- fanpage._id %>">
                                                <%- fanpage.name %>
                                            </option>
                                            <% }); %>
                                    </select>
                                </div>
                                <div class="form-group ml-2">
                                    <label for="limit">Limit: </label>
                                    <input type="number" value="0" class="form-control ml-2" id="limit">
                                </div>
                                <button class="btn btn-primary ml-2" id="btnGetImgOfFanpage">Get</button>

                            </div>
                            <div class="">
                                <h3>Result</h3>
                                <div id="get-result"></div>
                            </div>
                        </div>
                        <!-- -->

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <%- include('../../partials/footer') %>
                    <!-- End of Footer -->


            </div>
            <!-- End of Content Wrapper -->

    </div>
    <div id="alert-area" class="position-fixed" style="top: 20px; right: 20px;"></div>
    <!-- End of Page Wrapper -->

    <%- include('../../partials/bot') %>

</body>

</html>